     <file role="doc" name="example4.php"/>
     <file role="doc" name="example5.php"/>
     <file role="doc" name="example6.php"/>
     <file role="doc" name="example7.php"/>
     <file role="doc" name="test.xml"/>
     <file role="doc" name="test2.xml"/>
     <file role="doc" name="test3.xml"/>
    </dir> <!-- /examples -->
    <file role="php" name="Beautifier.php"/>
   </dir> <!-- / -->
  </filelist>
